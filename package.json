{
  "name": "software-testing-assignment",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "c8": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test/**/*.js",
      "src/.internal/**"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true
  },
  "scripts": {
    "mocha": "_mocha -b -R spec",
    "test": "c8 mocha",
    "coverage": "c8 mocha --reporter=lcov --reporter=text-summary",
    "test-coveralls": "npm test && shx cat ./coverage/lcov.info | node ./bin/coveralls.js"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "c8": "^10.1.3",
    "chai": "^6.2.1",
    "coveralls": "^3.1.1",
    "mocha": "^11.7.5",
    "mocha-lcov-reporter": "^1.3.0"
  }
}
